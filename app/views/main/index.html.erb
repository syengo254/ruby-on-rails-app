<div class="d-flex align-items-center justify-content-center">
  <h1>Welcome to Scheduled Tweets</h1>
</div>

<div class="text-center">
  <% if Current.user %>
  <p>Logged in as: <%= link_to Current.user.email, password_path %></p>
  <% else %>
  <p>
    <%= link_to "Login", sign_in_path, class: "btn btn-primary" %>
  <p>
  <div>
    <span>
      <%= link_to "Forgot password?", password_reset_path, class: "nav nav-link" %>
    </span>
  </div>
  <% end %>
</div>
